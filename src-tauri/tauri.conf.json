{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "statuspage collector",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://gist.githubusercontent.com/RemcoDewlde/2b878b3e42effa57334b9fa777626225/raw/Latest%2520JSON%2520Update"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQzNDExMzBDOTcwMjk3RDMKUldUVGx3S1hEQk5CUXcwaENybzFkdnJqcjY0UEhQRFFFdDFuRTAzV0w0ZVJ3QTBCbVZrZEplOXoK",
      "windows": {
        "installMode": "basicUi"
      }
    },
    "windows": [
      {
        "title": "statuspage collector",
        "width": 800,
        "height": 600,
        "minWidth": 800,
        "minHeight": 600,
        "fileDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "party.littledonut.status",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
